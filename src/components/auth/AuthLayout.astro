---
interface Props {
  title: string;
  description?: string;
  eyebrow?: string;
  highlights?: string[];
}

const { title, description = "", eyebrow = "", highlights = [] } = Astro.props as Props;
---

<section class="grid gap-10 lg:grid-cols-[minmax(0,0.9fr)_minmax(0,1fr)] lg:gap-16">
  <div class="space-y-6">
    {eyebrow && <p class="text-sm font-semibold uppercase tracking-wide text-primary/80">{eyebrow}</p>}
    <div class="space-y-4">
      <h1 class="text-3xl font-semibold tracking-tight text-foreground sm:text-4xl">{title}</h1>
      {description && <p class="text-muted-foreground text-lg">{description}</p>}
    </div>
    {
      highlights.length > 0 && (
        <ul class="space-y-3 rounded-2xl border border-border/80 bg-card/40 p-6 text-base text-muted-foreground shadow-sm backdrop-blur">
          {highlights.map((item) => (
            <li class="flex items-start gap-3" aria-label={item}>
              <span class="mt-1 inline-flex size-5 items-center justify-center rounded-full border border-primary/30 bg-primary/5 text-xs font-semibold text-primary">
                âœ“
              </span>
              <span class="text-sm leading-relaxed text-foreground">{item}</span>
            </li>
          ))}
        </ul>
      )
    }
    <slot name="aside" />
  </div>

  <div class="rounded-3xl border border-border/70 bg-background/95 p-6 shadow-xl shadow-primary/5 backdrop-blur sm:p-8">
    <slot />
  </div>
</section>
