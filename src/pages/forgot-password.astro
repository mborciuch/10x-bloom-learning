---
import PublicLayout from "../layouts/PublicLayout.astro";
import AuthLayout from "../components/auth/AuthLayout.astro";
import { ResetPasswordForm } from "../components/auth/ResetPasswordForm";
---

<PublicLayout title="Odzyskaj konto — Bloom Learning">
  <AuthLayout
    eyebrow="Odzyskiwanie dostępu"
    title="Wyślij link do zmiany hasła"
    description="Dbamy o bezpieczeństwo Twojej wiedzy. Zweryfikujemy adres email i pozwolimy ustawić nowe hasło."
    highlights={[
      "Link resetujący jest ważny przez 60 minut.",
      "Po zmianie hasła wszystkie aktywne sesje zostaną wylogowane.",
      "Możesz poprosić o nowy link maksymalnie 5 razy na godzinę.",
    ]}
  >
    <ResetPasswordForm client:load />

    <div slot="aside" class="text-sm text-muted-foreground">
      Jeśli nie pamiętasz adresu email lub utraciłaś/utraciłeś dostęp do skrzynki, skontaktuj się z nami na{" "}
      <a class="text-primary font-semibold hover:underline" href="mailto:security@bloomlearning.com"
        >security@bloomlearning.com</a
      >.
    </div>
  </AuthLayout>
</PublicLayout>
